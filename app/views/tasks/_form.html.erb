<div class="task-form container-fluid">
  <%= form_for @task do |f| %>
    <div class="row">
      <div class="form-group col-md-6">
        <label for="input-task-name">Task name</label>
        <%= f.text_field :name, autofocus: true, class: "form-control", id: "input-task-name", placeholder: "Task name" %>
      </div>
    </div>

    <div class="row">
      <div class="form-group col-md-6">
        <label for="input-task-description">Task description</label>
        <%= f.text_area :description, class: "form-control", id: "input-task-description", placeholder: "Task description" %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <label>Time between task completions</label>
        <div class="row">
          <div class="form-group col-md-6">
            <%= f.select :interval_number, (1..31), {}, { class: "form-control" } %>
          </div>
          <div class="form-group col-md-6">
            <%= f.select :interval_type, Task::INTERVAL_TYPES, {}, { class: "form-control" } %>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12 task-icon-selection">
        <label>Task icon</label>
        <%= content_tag "div", class: "task-icon-selection-container", data: { icon_id: @task.task_icon_id } do %>
          <% @icons.each do |icon| %>
            <div class="task-icon-label-and-radio">
              <label for="radio-task-icon-<%= icon.id %>"><%= image_tag("task_icons/#{icon.file_name}") %></label>
              <%= f.radio_button :task_icon_id, icon.id, class: "radio-task-icon", id: "radio-task-icon-#{icon.id}" %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>

    <button type="submit" class="btn btn-success">Submit</button>
  <% end %>
</div>
