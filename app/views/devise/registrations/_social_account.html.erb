<% if current_user.identities.find_by_name(provider.to_s) %>
  <%= link_to "Delete", current_user.identities.find_by_name(provider.to_s), method: :delete, class: "btn btn-danger" %>
<% else %>
  <%= link_to "Link my #{provider.to_s.titleize} account", omniauth_authorize_path(resource_name, provider), class: "btn btn-success" %><br />
<% end %>
