<div class="page-header">
  <h1>World of Tasks</h1>
</div>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h2>Sign up</h2>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="row">
      <div class="col-md-8 col-md-offset-4 devise-errors">
        <%= devise_error_messages! %>
      </div>
    </div>

    <div class="row">
      <div class="form-group col-md-4 col-md-offset-4">
        <%= f.label :email, for: "input-email" %>
        <%= f.email_field :email, class: "form-control", id: "input-email", autofocus: true %>
      </div>
    </div>

    <div class="row">
      <div class="form-group col-md-4 col-md-offset-4">
        <%= f.label :password, for: "input-password" %> <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %>
        <%= f.password_field :password, class: "form-control", id: "input-password", autocomplete: "off" %>
      </div>
    </div>

    <div class="row">
      <div class="form-group col-md-4 col-md-offset-4">
        <%= f.label :password_confirmation, for: "input-password-confirm" %>
        <%= f.password_field :password_confirmation, class: "form-control", id: "input-password-confirm", autocomplete: "off" %>
      </div>
    </div>

    <div class="row">
      <div class="form-group col-md-4 col-md-offset-4">
        <%= f.submit "Sign up", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
