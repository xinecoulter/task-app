<div class="container-fluid">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h2>Account Settings</h2>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <div class="row">
      <div class="col-md-8 col-md-offset-4 devise-errors">
        <%= devise_error_messages! %>
      </div>
    </div>

    <div class="row">
      <div class="form-group col-md-4 col-md-offset-4">
        <%= f.label :given_name, for: "input-given-name" %>
        <%= f.text_field :given_name, class: "form-control", id: "input-given-name", autofocus: true %>
      </div>
    </div>

    <div class="row">
      <div class="form-group col-md-4 col-md-offset-4">
        <%= f.label :surname, for: "input-surname" %>
        <%= f.text_field :surname, class: "form-control", id: "input-surname" %>
      </div>
    </div>

    <div class="row">
      <div class="form-group col-md-4 col-md-offset-4">
        <%= f.label :email, for: "input-email" %>
        <%= f.email_field :email, class: "form-control", id: "input-email" %>
      </div>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="row">
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      </div>
    <% end %>

    <div class="row">
      <div class="form-group col-md-4 col-md-offset-4">
        <%= f.label :password, for: "input-password" %> <i>(leave blank if you don't want to change it)</i>
        <%= f.password_field :password, class: "form-control", id: "input-password", autocomplete: "off" %>
      </div>
    </div>

    <div class="row">
      <div class="form-group col-md-4 col-md-offset-4">
        <%= f.label :password_confirmation, for: "input-password-confirm" %>
        <%= f.password_field :password_confirmation, class: "form-control", id: "input-password-confirm", autocomplete: "off" %>
      </div>
    </div>

    <div class="row">
      <div class="form-group col-md-4 col-md-offset-4">
        <%= f.label :current_password, for: "input-password-current" %> <i>(we need your current password to confirm your changes)</i>
        <%= f.password_field :current_password, class: "form-control", id: "input-password-current", autocomplete: "off" %>
      </div>
    </div>

    <div class="row">
      <div class="form-group col-md-4 col-md-offset-4">
        <%= f.submit "Update", class: "btn btn-warning" %>
      </div>
    </div>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <h3>Social Media Accounts</h3>
        <%- resource_class.omniauth_providers.each do |provider| %>
          <%= render partial: "devise/registrations/social_account", locals: { resource_name: resource_name, provider: provider } %>
        <% end -%>
      </div>
    </div>
  <% end -%>

  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h3>Cancel my account</h3>
      <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete , class: "btn btn-danger" %></p>
    </div>
  </div>
</div>
